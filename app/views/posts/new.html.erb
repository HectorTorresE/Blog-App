<h1 class="text-xl font-bold">Add new Post</h1>
<%= form_with model: @post, html: {class: "text-2xl flex flex-col mt-4"} do |form| %>
  <div class="flex flex-row">
    <%= form.label :title, class: "font-bold mx-2 my-4 text-xl" %>
    <%= form.text_field :title, class: "rounded-md border grow" %>
  </div>
  <%= form.label :text, class: "font-bold mx-2 my-4 text-lg text-center" %>
  <%= form.text_area :text, rows: 5, class: "rounded-md border" %>
  <%= form.submit class: "border p-2 bg-sky-500 hover:bg-sky-600 my-2 font-bold rounded-md" %>
<% end %>
